{
    "manifest_version": 3,
    "name": "HowLongToBeat on Steam",
    "version": "1.11",
    "author": "Juzlus",
    "icons": {
        "128": "icons/128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "howlongtobeat-on-steam@juzlus"
        }
    },
    "description": "Instantly check game completion times from HowLongToBeat on Steam pages.",
    "permissions": [
        "notifications",
        "tabs",
        "webRequest",
        "webRequestBlocking"
    ],
    "host_permissions": [
        "https://howlongtobeat.com/*",
        "https://raw.githubusercontent.com/*",
        "https://github.com/*",
        "https://steamdb.info/*"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://store.steampowered.com/app/*"
            ],
            "js": [
                "scripts/main.js"
            ],
            "css": [
                "css/style.css"
            ]
        }
    ]
}